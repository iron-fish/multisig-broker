{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "jsx": "react",
    "declarationMap": true,
    "lib": ["es2020"],
    "outDir": "build",
    "rootDir": "./",
    "tsBuildInfoFile": "./build/tsconfig.tsbuildinfo"
  },
  "include": ["src", "package.json", "start.ts"],
  "exclude": ["build"]
}
